#!/bin/sh

set -e

lb config noauto                                   \
	--architectures i386                       \
	--linux-flavours 686-pae                   \
	--distribution jessie                      \
	--archive-areas "main contrib non-free"    \
	--bootappend-live "boot=live ip=eth0:10.9.8.7:255.0.0.0:: console=tty console=ttyS0,9600n8 vga=0x3d4" \
	--linux-packages "linux-image"             \
	--clean                                    \
    --debian-installer false                   \
    --debian-installer-gui false               \
    --apt-recommends false                     \
	"${@}"
