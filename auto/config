#!/bin/sh

set -e

lb config noauto                                   \
	--architectures i386                       \
	--linux-flavours 686-pae                   \
	--distribution jessie                      \
	--archive-areas "main contrib non-free"    \
	--bootappend-live "boot=live findiso=/boot/images/jessie.iso"  \
	--linux-packages "linux-image"             \
	--clean                                    \
 	--firmware-chroot true                     \
        --security true                            \
	"${@}"
